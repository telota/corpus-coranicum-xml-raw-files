<?xml version="1.0" encoding="UTF-8"?>
<Quran xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Textstruktur.xsd">
    <Sure id="083" translator="Nicolai Sinai" webtauglich="true">
        <Hauptteil id="0">
            <Abschnitt id="0">
                <Gesaetz n="0">
                    <Vers n="000">
                        <Teilvers n="000" reim="2n/m">
                            <Kolon lang="ar" Einschub="false" n="0">بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ</Kolon>
                            <Kolon lang="de" Einschub="false" n="0">Im Namen Gottes, des barmherzigen Erbarmers!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="1">
            <Abschnitt id="1">
                <Gesaetz n="1">
                    <Vers n="001">
                        <Teilvers n="001" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="1">وَيۡلٌۭ لِّلۡمُطَفِّفِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1">Wehe denen, die das Maß mindern,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="2">ٱلَّذِينَ إِذَا ٱكۡتَالُوا۟ عَلَى ٱلنَّاسِ يَسۡتَوۡفُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="2">die volles Maß verlangen, wenn sie sich von den Leuten abmessen lassen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="003">
                        <Teilvers n="003" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="3">وَإِذَا كَالُوهُمۡ أَو وَّزَنُوهُمۡ يُخۡسِرُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3">die aber etwas abziehen, wenn sie selbst ihnen abmessen oder abwägen!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="004">
                        <Teilvers n="004" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="4">أَلَا يَظُنُّ أُو۟لَٰٓئِكَ أَنَّهُم مَّبۡعُوثُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">Meinen jene etwa nicht, dass sie auferweckt werden</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="005">
                        <Teilvers n="005" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="5">لِيَوۡمٍ عَظِيمٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">zu einem gewaltigen Tag,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="006">
                        <Teilvers n="006" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="6">يَوۡمَ يَقُومُ ٱلنَّاسُ لِرَبِّ ٱلۡعَٰلَمِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="6">am Tag, da die Menschen vor dem Herrn der Weltbewohner stehen?</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="2">
            <Abschnitt id="1">
                <Gesaetz n="2">
                    <Vers n="007">
                        <Teilvers n="007" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="7">كَلَّآ إِنَّ كِتَٰبَ ٱلۡفُجَّارِ لَفِی سِجِّينٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="7">Nein, die Sünder sind niedergeschrieben in Siǧǧīn.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="008">
                        <Teilvers n="008" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="8">وَمَآ أَدۡرَىٰكَ مَا سِجِّينٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="8">Was lässt dich wissen, was Siǧǧīn ist?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="009">
                        <Teilvers n="009" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="9">كِتَٰبٌۭ مَّرۡقُومٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="9">Eine aufgezeichnete Schrift.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="3">
                    <Vers n="010">
                        <Teilvers n="010" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="10">وَيۡلٌۭ يَوۡمَئِذٍۢ لِّلۡمُكَذِّبِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="10">Wehe an jenem Tag den Leugnern,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="011">
                        <Teilvers n="011" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="11">ٱلَّذِينَ يُكَذِّبُونَ بِيَوۡمِ ٱلدِّينِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="11">die den Tag des Gerichts leugnen!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="012">
                        <Teilvers n="012" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="12">وَمَا يُكَذِّبُ بِهِۦٓ إِلَّا كُلُّ مُعۡتَدٍ أَثِيمٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="12">Ihn leugnet nur ein sündiger Missetäter;</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="013">
                        <Teilvers n="013" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="13">إِذَا تُتۡلَىٰ عَلَيۡهِ ءَايَٰتُنَا</Kolon>
                            <Kolon Einschub="false" lang="de" n="13">wenn ihm unsere Zeichen vorgetragen werden,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="14">قَالَ أَسَٰطِيرُ ٱلۡأَوَّلِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="14">sagt er: »Fabeln der Altvorderen!«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="014">
                        <Teilvers n="014" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="15">كَلَّا بَلۡۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا۟ يَكۡسِبُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="15">Nein, was sie begangen haben, hat sich auf ihr Herz gelegt!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="015">
                        <Teilvers n="015" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="16">كَلَّآ إِنَّهُمۡ عَن رَّبِّهِمۡ يَوۡمَئِذٍۢ لَّمَحۡجُوبُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="16">Nein, an jenem Tag sind sie von ihrem Herrn abgeschirmt!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="016">
                        <Teilvers n="016" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="17">ثُمَّ إِنَّهُمۡ لَصَالُوا۟ ٱلۡجَحِيمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="17">Dann schmoren sie im Brand.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="017">
                        <Teilvers n="017" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="18">ثُمَّ يُقَالُ هَٰذَا ٱلَّذِی كُنتُم بِهِۦ تُكَذِّبُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="18">Dann wird gesagt: »Das ist es, was ihr geleugnet habt!«</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="4">
                    <Vers n="018">
                        <Teilvers n="018" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="19">كَلَّآ إِنَّ كِتَٰبَ ٱلۡأَبۡرَارِ لَفِی عِلِّيِّينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="19">Nein, die Rechtschaffenen sind niedergeschrieben in ʿIlliyyūn.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="019">
                        <Teilvers n="019" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="20">وَمَآ أَدۡرَىٰكَ مَا عِلِّيُّونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="20">Was lässt dich wissen, was ʿIlliyyūn ist?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="020">
                        <Teilvers n="020" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="21">كِتَٰبٌۭ مَّرۡقُومٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="21">Eine aufgezeichnete Schrift,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="021">
                        <Teilvers n="021" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="22">يَشۡهَدُهُ ٱلۡمُقَرَّبُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="22">welche die Gott Nahestehenden schauen.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="5">
                    <Vers n="022">
                        <Teilvers n="022" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="23">إِنَّ ٱلۡأَبۡرَارَ لَفِی نَعِيمٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="23">Die Rechtschaffenen befinden sich in einem Zustand der Wonne,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="023">
                        <Teilvers n="023" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="24">عَلَى ٱلۡأَرَآئِكِ يَنظُرُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="24">auf Ruhebetten liegend schauen sie um sich.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="024">
                        <Teilvers n="024" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="25">تَعۡرِفُ فِی وُجُوهِهِمۡ نَضۡرَةَ ٱلنَّعِيمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="25">Auf ihrem Gesicht erkennst du den Glanz der Wonne.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="025">
                        <Teilvers n="025" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="26">يُسۡقَوۡنَ مِن رَّحِيقٍۢ مَّخۡتُومٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="26">Zu trinken bekommen sie versiegelten Wein,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="026">
                        <Teilvers n="026" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="27">خِتَٰمُهُۥ مِسۡكٌۭ ۚ</Kolon>
                            <Kolon Einschub="false" lang="de" n="27">dessen Siegel aus Moschus ist</Kolon>
                            <Kolon Einschub="false" lang="ar" n="28">وَفِی ذَٰلِكَ فَلۡيَتَنَافَسِ ٱلۡمُتَنَٰفِسُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="28">— danach möge man wetteifern! —</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="027">
                        <Teilvers n="027" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="29">وَمِزَاجُهُۥ مِن تَسۡنِيمٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="29">und dessen Mischwasser aus Tasnīm stammt,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="028">
                        <Teilvers n="028" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="30">وَمِزَاجُهُۥ مِن تَسۡنِيمٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="30">einer Quelle, aus der die Gott Nahestehenden trinken.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="3">
            <Abschnitt id="1">
                <Gesaetz n="6">
                    <Vers n="029">
                        <Teilvers n="029" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="31">إِنَّ ٱلَّذِينَ أَجۡرَمُوا۟ كَانُوا۟ مِنَ ٱلَّذِينَ ءَامَنُوا۟ يَضۡحَكُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="31">Die Übeltäter pflegten über die Gläubigen zu lachen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="030">
                        <Teilvers n="030" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="32">وَإِذَا مَرُّوا۟ بِهِمۡ يَتَغَامَزُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="32">einander zuzuzwinkern, wenn sie an ihnen vorbeigingen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="031">
                        <Teilvers n="031" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="33">وَإِذَا ٱنقَلَبُوٓا۟ إِلَىٰۤ أَهۡلِهِمُ ٱنقَلَبُوا۟ فَكِهِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="33">sich zu belustigen, wenn sie zu ihren Angehörigen zurückkehrten</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="032">
                        <Teilvers n="032" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="34">وَإِذَا رَأَوۡهُمۡ قَالُوٓا۟</Kolon>
                            <Kolon Einschub="false" lang="de" n="34">und wenn sie sie sahen, zu sagen:</Kolon>
                            <Kolon Einschub="false" lang="ar" n="35">إِنَّ هَٰٓؤُلَآءِ لَضَآلُّونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="35">»Die da gehen in die Irre!«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="033">
                        <Teilvers n="033" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="36">وَمَآ أُرۡسِلُوا۟ عَلَيۡهِمۡ حَٰفِظِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="36">Dabei wurden sie doch nicht als Hüter über sie gesandt!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="034">
                        <Teilvers n="034" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="37">فَٱلۡيَوۡمَ ٱلَّذِينَ ءَامَنُوا۟ مِنَ ٱلۡكُفَّارِ يَضۡحَكُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="37">Heute lachen die Gläubigen über die Ungläubigen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="035">
                        <Teilvers n="035" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="38">عَلَى ٱلۡأَرَآئِكِ يَنظُرُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="38">während sie auf Ruhebetten liegend um sich schauen.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="036">
                        <Teilvers n="036" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="39">هَلۡ ثُوِّبَ ٱلۡكُفَّارُ مَا كَانُوا۟ يَفۡعَلُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="39">Werden die Ungläubigen etwa für das, was sie getan haben, belohnt?</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
    </Sure>
</Quran>