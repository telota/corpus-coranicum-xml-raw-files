<?xml version="1.0" encoding="UTF-8"?>
<Quran xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Textstruktur.xsd">
    <Sure id="078" translator="Nicolai Sinai" webtauglich="true">
        <Hauptteil id="0">
            <Abschnitt id="0">
                <Gesaetz n="0">
                    <Vers n="000">
                        <Teilvers n="000" reim="2n/m">
                            <Kolon lang="ar" Einschub="false" n="0">بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ</Kolon>
                            <Kolon lang="de" Einschub="false" n="0">Im Namen Gottes, des barmherzigen Erbarmers!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="1">
            <Abschnitt id="1">
                <Gesaetz n="1">
                    <Vers n="001">
                        <Teilvers n="001" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="1">عَمَّ يَتَسَآءَلُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1">Wonach fragen sie einander?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="2">عَنِ ٱلنَّبَإِ ٱلۡعَظِيمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="2">Nach der gewaltigen Kunde,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="003">
                        <Teilvers n="003" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="3">ٱلَّذِی هُمۡ فِيهِ مُخۡتَلِفُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3">über die sie uneins sind.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="004">
                        <Teilvers n="004" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="4">كَلَّا سَيَعۡلَمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">Doch nein, sie werden erfahren!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="005">
                        <Teilvers n="005" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="5">ثُمَّ كَلَّا سَيَعۡلَمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">Nochmals: Doch nein, sie werden erfahren!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="2">
            <Abschnitt id="1">
                <Gesaetz n="2">
                    <Vers n="006">
                        <Teilvers n="006" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="6">أَلَمۡ نَجۡعَلِ ٱلۡأَرۡضَ مِهَٰدًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="6">Haben wir die Erde nicht zu einer ebenen Fläche gemacht</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="007">
                        <Teilvers n="007" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="7">وَٱلۡجِبَالَ أَوۡتَادًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="7">und die Berge zu Zeltpflöcken?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="008">
                        <Teilvers n="008" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="8">وَخَلَقۡنَٰكُمۡ أَزۡوَٰجًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="8">Haben wir euch nicht als Paare geschaffen</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="009">
                        <Teilvers n="009" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="9">وَجَعَلۡنَا نَوۡمَكُمۡ سُبَاتًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="9">und euch den Schlaf zur Ruhe gemacht?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="010">
                        <Teilvers n="010" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="10">وَجَعَلۡنَا ٱلَّيۡلَ لِبَاسًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="10">Haben wir nicht die Nacht zu einem Gewand gemacht</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="011">
                        <Teilvers n="011" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="11">وَجَعَلۡنَا ٱلنَّهَارَ مَعَاشًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="11">und den Tag zum Lebensunterhalt?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="012">
                        <Teilvers n="012" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="12">وَبَنَيۡنَا فَوۡقَكُمۡ سَبۡعًۭا شِدَادًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="12">Haben wir nicht über euch sieben Festen erbaut</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="013">
                        <Teilvers n="013" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="13">وَجَعَلۡنَا سِرَاجًۭا وَهَّاجًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="13">und eine hell leuchtende Lampe gemacht?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="014">
                        <Teilvers n="014" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="14">وَأَنزَلۡنَا مِنَ ٱلۡمُعۡصِرَٰتِ مَآءًۭ ثَجَّاجًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="14">Haben wir nicht von den Regenwolken strömendes Wasser herabgesandt,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="015">
                        <Teilvers n="015" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="15">لِّنُخۡرِجَ بِهِۦ حَبًّۭا وَنَبَاتًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="15">um damit Korn und Pflanzen hervorzubringen</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="016">
                        <Teilvers n="016" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="16">وَجَنَّٰتٍ أَلۡفَافًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="16">und dicht bewachsene Gärten?</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="3">
            <Abschnitt id="1">
                <Gesaetz n="3">
                    <Vers n="017">
                        <Teilvers n="017" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="17">إِنَّ يَوۡمَ ٱلۡفَصۡلِ كَانَ مِيقَٰتًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="17">Wahrlich, der Tag der Entscheidung ist ein festgesetzter Zeitpunkt.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="018">
                        <Teilvers n="018" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="18">يَوۡمَ يُنفَخُ فِی ٱلصُّورِ فَتَأۡتُونَ أَفۡوَاجًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="18">Am Tag, da die Posaune geblasen wird und ihr in Scharen kommt,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="019">
                        <Teilvers n="019" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="19">وَفُتِحَتِ ٱلسَّمَآءُ فَكَانَتۡ أَبۡوَٰبًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="19">da der Himmel sich öffnet und zu Toren wird,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="020">
                        <Teilvers n="020" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="20">وَسُيِّرَتِ ٱلۡجِبَالُ فَكَانَتۡ سَرَابًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="20">und die Berge in Bewegung geraten und zu einer Luftspiegelung werden.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="4">
                    <Vers n="021">
                        <Teilvers n="021" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="21">إِنَّ جَهَنَّمَ كَانَتۡ مِرۡصَادًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="21">Wahrlich, die Hölle liegt auf der Lauer,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="022">
                        <Teilvers n="022" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="22">لِّلطَّٰغِينَ مَـَٔابًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="22">ein Ort der Heimkehr für die Aufsässigen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="023">
                        <Teilvers n="023" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="23">لَّٰبِثِينَ فِيهَآ أَحۡقَابًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="23">in der sie ganze Zeitalter verweilen</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="024">
                        <Teilvers n="024" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="24">لَّا يَذُوقُونَ فِيهَا بَرۡدًۭا وَلَا شَرَابًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="24">und wo sie weder Kühle noch Trank kosten,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="025">
                        <Teilvers n="025" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="25">إِلَّا حَمِيمًۭا وَغَسَّاقًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="25">nur heißes Wasser und Eiter</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="026">
                        <Teilvers n="026" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="26">جَزَآءًۭ وِفَاقًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="26">als angemessene Vergeltung.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="5">
                    <Vers n="027">
                        <Teilvers n="027" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="27">إِنَّهُمۡ كَانُوا۟ لَا يَرۡجُونَ حِسَابًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="27">Wahrlich, sie haben keine Abrechnung erwartet</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="028">
                        <Teilvers n="028" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="28">وَكَذَّبُوا۟ بِـَٔايَٰتِنَا كِذَّابًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="28">und unsere Zeichen hartnäckig geleugnet.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="029">
                        <Teilvers n="029" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="29">وَكُلَّ شَىۡءٍ أَحۡصَيۡنَٰهُ كِتَٰبًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="29">Wir aber haben alles in einer Schrift verzeichnet.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="030">
                        <Teilvers n="030" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="30">فَذُوقُوا۟ فَلَن نَّزِيدَكُمۡ إِلَّا عَذَابًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="30">»So kostet nur, wir reichen euch nur noch weitere Strafe nach!«</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="6">
                    <Vers n="031">
                        <Teilvers n="031" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="31">إِنَّ لِلۡمُتَّقِينَ مَفَازًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="31">Wahrlich, die Gottesfürchtigen haben einen Ort des Sieges,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="032">
                        <Teilvers n="032" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="32">حَدَآئِقَ وَأَعۡنَٰبًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="32">Gärten und Rebstöcke,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="033">
                        <Teilvers n="033" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="33">وَكَوَاعِبَ أَتۡرَابًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="33">vollbusige Frauen von gleichem Alter</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="034">
                        <Teilvers n="034" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="34">وَكَأۡسًۭا دِهَاقًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="34">und einen gefüllten Kelch.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="035">
                        <Teilvers n="035" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="35">لَّا يَسۡمَعُونَ فِيهَا لَغۡوًۭا وَلَا كِذَّٰبًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="35">Sie hören dort weder Geschwätz noch Leugnen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="036">
                        <Teilvers n="036" reim="āKā" reimkommentar="mit vorherrschenden Explosiven">
                            <Kolon Einschub="false" lang="ar" n="36">جَزَآءًۭ مِّن رَّبِّكَ عَطَآءً حِسَابًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="36">als Vergeltung von deinem Herrn, als Gabe und Abrechnung,</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="7">
                    <Vers n="037">
                        <Teilvers n="037" reim="ābā">
                            <Kolon Einschub="true" lang="ar" n="37">رَّبِّ ٱلسَّمَٰوَٰتِ وَٱلۡأَرۡضِ وَمَا بَيۡنَهُمَا ٱلرَّحۡمَٰنِ</Kolon>
                            <Kolon Einschub="true" lang="de" n="37">vom Herrn der Himmel und der Erde und dessen, was dazwischen ist, dem Barmherzigen;</Kolon>
                            <Kolon Einschub="true" lang="ar" n="38">لَا يَمۡلِكُونَ مِنۡهُ خِطَابًۭا</Kolon>
                            <Kolon Einschub="true" lang="de" n="38">niemand vermag ihn anzureden.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="038">
                        <Teilvers n="038" reim="ābā">
                            <Kolon Einschub="true" lang="ar" n="39">يَوۡمَ يَقُومُ ٱلرُّوحُ وَٱلۡمَلَٰٓئِكَةُ صَفًّۭا ۖ</Kolon>
                            <Kolon Einschub="true" lang="de" n="39">Am Tag, an dem der Geist und die Engel in einer Reihe stehen,</Kolon>
                            <Kolon Einschub="true" lang="ar" n="40">لَّا يَتَكَلَّمُونَ إِلَّا مَنۡ أَذِنَ لَهُ ٱلرَّحۡمَٰنُ وَقَالَ صَوَابًۭا</Kolon>
                            <Kolon Einschub="true" lang="de" n="40">sprechen sie nur dann, wenn der Barmherzige es einem erlaubt und er sagt, was recht ist.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="039">
                        <Teilvers n="039" reim="ābā">
                            <Kolon Einschub="true" lang="ar" n="41">ذَٰلِكَ ٱلۡيَوۡمُ ٱلۡحَقُّ ۖ</Kolon>
                            <Kolon Einschub="true" lang="de" n="41">Dieser Tag ist die Wahrheit;</Kolon>
                            <Kolon Einschub="true" lang="ar" n="42">فَمَن شَآءَ ٱتَّخَذَ إِلَىٰ رَبِّهِۦ مَـَٔابًا</Kolon>
                            <Kolon Einschub="true" lang="de" n="42">wer da will, kehrt heim zu seinem Herrn.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="040">
                        <Teilvers n="040" reim="ābā">
                            <Kolon Einschub="true" lang="ar" n="43">إِنَّآ أَنذَرۡنَٰكُمۡ عَذَابًۭا قَرِيبًۭا</Kolon>
                            <Kolon Einschub="true" lang="de" n="43">Wahrlich, wir haben euch vor einer nahen Strafe gewarnt,</Kolon>
                            <Kolon Einschub="true" lang="ar" n="44">يَوۡمَ يَنظُرُ ٱلۡمَرۡءُ مَا قَدَّمَتۡ يَدَاهُ</Kolon>
                            <Kolon Einschub="true" lang="de" n="44">am Tag, da ein jeder zu sehen bekommt, was seine Hände getan haben,</Kolon>
                            <Kolon Einschub="true" lang="ar" n="45">وَيَقُولُ ٱلۡكَافِرُ يَٰلَيۡتَنِی كُنتُ تُرَٰبًا</Kolon>
                            <Kolon Einschub="true" lang="de" n="45">und der Ungläubige sagt: »Wäre ich doch Staub!«</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
    </Sure>
</Quran>