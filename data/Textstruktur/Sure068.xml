<?xml version="1.0" encoding="UTF-8"?>
<Quran xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Textstruktur.xsd">
    <Sure id="068" translator="Nicolai Sinai" webtauglich="true">
        <Hauptteil id="0">
            <Abschnitt id="0">
                <Gesaetz n="0">
                    <Vers n="000">
                        <Teilvers n="000" reim="2n/m">
                            <Kolon lang="ar" Einschub="false" n="0">بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ</Kolon>
                            <Kolon lang="de" Einschub="false" n="0">Im Namen Gottes, des barmherzigen Erbarmers!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="1">
            <Abschnitt id="1">
                <Gesaetz n="1">
                    <Vers n="001">
                        <Teilvers n="001" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="1">نٓ ۚ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1">Nūn.</Kolon>
                            <Kolon Einschub="false" lang="ar" n="2">وَٱلۡقَلَمِ وَمَا يَسۡطُرُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="2">Beim Schreibrohr und dem, was man niederschreibt!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="3">مَآ أَنتَ بِنِعۡمَةِ رَبِّكَ بِمَجۡنُونٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3">Du bist dank der Gnade deines Herrn nicht besessen.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="003">
                        <Teilvers n="003" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="4">وَإِنَّ لَكَ لَأَجۡرًا غَيۡرَ مَمۡنُونٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">Dein Lohn wird dir nicht vorenthalten.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="004">
                        <Teilvers n="004" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="5">وَإِنَّكَ لَعَلَىٰ خُلُقٍ عَظِيمٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">Du bist von großer Wesensart.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="005">
                        <Teilvers n="005" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="6">فَسَتُبۡصِرُ وَيُبۡصِرُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="6">Du wirst sehen, und sie werden sehen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="006">
                        <Teilvers n="006" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="7">بِأَييِّكُمُ ٱلۡمَفۡتُونُ</Kolon>
                            <Kolon Einschub="false" lang="de" n="7">wer es ist, der in Versuchung geführt wird.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="007">
                        <Teilvers n="007" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="8">إِنَّ رَبَّكَ هُوَ أَعۡلَمُ بِمَن ضَلَّ عَن سَبِيلِهِۦ</Kolon>
                            <Kolon Einschub="false" lang="de" n="8">Dein Herr weiß am besten, wer von seinem Weg abgeirrt ist,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="9">وَهُوَ أَعۡلَمُ بِٱلۡمُهۡتَدِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="9">und er weiß am besten, wer rechtgeleitet ist.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="2">
                    <Vers n="008">
                        <Teilvers n="008" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="10">فَلَا تُطِعِ ٱلۡمُكَذِّبِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="10">So gehorche den Leugnern nicht —</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="009">
                        <Teilvers n="009" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="11">وَدُّوا۟ لَوۡ تُدۡهِنُ فَيُدۡهِنُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="11">Sie hätten gern, dass du schöne Worte machst; dann würden auch sie schöne Worte  machen! —</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="010">
                        <Teilvers n="010" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="12">وَلَا تُطِعۡ كُلَّ حَلَّافٍۢ مَّهِينٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="12">und gehorche keinem, der andauernd schwört und verächtlich ist,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="011">
                        <Teilvers n="011" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="13">هَمَّازٍۢ مَّشَّآءٍۭ بِنَمِيمٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="13">einem Verleumder, der mit übler Nachrede umhergeht,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="012">
                        <Teilvers n="012" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="14">مَّنَّاعٍۢ لِّلۡخَيۡرِ مُعۡتَدٍ أَثِيمٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="14">einem, der das Gute vorenthält, einem sündigen Missetäter,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="013">
                        <Teilvers n="013" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="15">عُتُلٍّۭ بَعۡدَ ذَٰلِكَ زَنِيمٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="15">einem, der grob ist und noch dazu ein Eindringling,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="014">
                        <Teilvers n="014" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="16">أَن كَانَ ذَا مَالٍۢ وَبَنِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="16">nur weil er Besitz und Söhne hat!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="015">
                        <Teilvers n="015" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="17">إِذَا تُتۡلَىٰ عَلَيۡهِ ءَايَٰتُنَا</Kolon>
                            <Kolon Einschub="false" lang="de" n="17">Wenn ihm unsere Zeichen vorgetragen werden,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="18">قَالَ أَسَٰطِيرُ ٱلۡأَوَّلِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="18">so sagt er: »Fabeln der Altvorderen!«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="016">
                        <Teilvers n="016" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="19">سَنَسِمُهُۥ عَلَى ٱلۡخُرۡطُومِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="19">Wir werden ihm die Nase brandmarken!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="2">
            <Abschnitt id="1">
                <Gesaetz n="3">
                    <Vers n="017">
                        <Teilvers n="017" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="20">إِنَّا بَلَوۡنَٰهُمۡ كَمَا بَلَوۡنَآ أَصۡحَٰبَ ٱلۡجَنَّةِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="20">Wir haben sie geprüft, so wie wir die Leute des Gartens prüften,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="21">إِذۡ أَقۡسَمُوا۟ لَيَصۡرِمُنَّهَا مُصۡبِحِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="21">als sie schworen, sie würden ihn morgens abernten,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="018">
                        <Teilvers n="018" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="22">وَلَا يَسۡتَثۡنُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="22">und dabei keinen Vorbehalt machten.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="019">
                        <Teilvers n="019" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="23">فَطَافَ عَلَيۡهَا طَآئِفٌۭ مِّن رَّبِّكَ وَهُمۡ نَآئِمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="23">Da ging im Auftrag deines Herrn einer im Garten um, während sie schliefen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="020">
                        <Teilvers n="020" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="24">فَأَصۡبَحَتۡ كَٱلصَّرِيمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="24">so dass er am Morgen wie abgeerntet war.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="021">
                        <Teilvers n="021" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="25">فَتَنَادَوۡا۟ مُصۡبِحِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="25">Am Morgen riefen sie einander zu:</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="022">
                        <Teilvers n="022" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="26">أَنِ ٱغۡدُوا۟ عَلَىٰ حَرۡثِكُمۡ</Kolon>
                            <Kolon Einschub="false" lang="de" n="26">»Geht früh auf eure Felder,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="27">إِن كُنتُمۡ صَٰرِمِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="27">wenn ihr ernten wollt!«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="023">
                        <Teilvers n="023" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="28">فَٱنطَلَقُوا۟ وَهُمۡ يَتَخَٰفَتُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="28">Sie machten sich auf und flüsterten einander zu:</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="024">
                        <Teilvers n="024" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="29">أَن لَّا يَدۡخُلَنَّهَا ٱلۡيَوۡمَ عَلَيۡكُم مِّسۡكِينٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="29">»Heute soll euch kein Armer hineinkommen!«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="025">
                        <Teilvers n="025" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="30">وَغَدَوۡا۟ عَلَىٰ حَرۡدٍۢ قَٰدِرِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="30">Zielstrebig und im Vollbesitz ihrer Kräfte brachen sie in der Frühe auf.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="4">
                    <Vers n="026">
                        <Teilvers n="026" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="31">فَلَمَّا رَأَوۡهَا قَالُوٓا۟</Kolon>
                            <Kolon Einschub="false" lang="de" n="31">Doch als sie ihn erblickten, sprachen sie:</Kolon>
                            <Kolon Einschub="false" lang="ar" n="32">إِنَّا لَضَآلُّونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="32">»Wir sind in die Irre gegangen!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="027">
                        <Teilvers n="027" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="33">بَلۡ نَحۡنُ مَحۡرُومُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="33">Mehr noch, wir sind beraubt!«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="028">
                        <Teilvers n="028" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="34">قَالَ أَوۡسَطُهُمۡ</Kolon>
                            <Kolon Einschub="false" lang="de" n="34">Der Besonnenste unter ihnen sprach:</Kolon>
                            <Kolon Einschub="false" lang="ar" n="35">أَلَمۡ أَقُل لَّكُمۡ لَوۡلَا تُسَبِّحُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="35">»Habe ich euch nicht gesagt: Warum preist ihr nicht Gott?«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="029">
                        <Teilvers n="029" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="36">قَالُوا۟ سُبۡحَٰنَ رَبِّنَآ</Kolon>
                            <Kolon Einschub="false" lang="de" n="36">Sie sprachen: »Gepriesen sei unser Herr!</Kolon>
                            <Kolon Einschub="false" lang="ar" n="37">إِنَّا كُنَّا ظَٰلِمِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="37">Wir haben Unrecht getan.«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="030">
                        <Teilvers n="030" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="38">فَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضٍۢ يَتَلَٰوَمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="38">Sie wandten sich einander zu und machten sich Vorwürfe</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="031">
                        <Teilvers n="031" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="39">قَالُوا۟ يَٰوَيۡلَنَآ إِنَّا كُنَّا طَٰغِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="39">und sprachen: »Wehe uns, wir waren aufsässig!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="032">
                        <Teilvers n="032" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="40">عَسَىٰ رَبُّنَآ أَن يُبۡدِلَنَا خَيۡرًۭا مِّنۡهَآ</Kolon>
                            <Kolon Einschub="false" lang="de" n="40">Möge unser Herr uns etwas Besseres dafür geben!</Kolon>
                            <Kolon Einschub="false" lang="ar" n="41">إِنَّآ إِلَىٰ رَبِّنَا رَٰغِبُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="41">Unser Verlangen steht nach unserm Herrn.«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="033">
                        <Teilvers n="033" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="42">كَذَٰلِكَ ٱلۡعَذَابُ ۖ</Kolon>
                            <Kolon Einschub="false" lang="de" n="42">So ist die Strafe,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="43">وَلَعَذَابُ ٱلۡٴَاخِرَةِ أَكۡبَرُ ۖ</Kolon>
                            <Kolon Einschub="false" lang="de" n="43">doch die jenseitige Strafe ist größer.</Kolon>
                            <Kolon Einschub="false" lang="ar" n="44">لَوۡ كَانُوا۟ يَعۡلَمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="44">Wenn sie doch nur wüssten!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="034">
                        <Teilvers n="034" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="45">إِنَّ لِلۡمُتَّقِينَ عِندَ رَبِّهِمۡ جَنَّٰتِ ٱلنَّعِيمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="45">Den Gottesfürchtigen aber kommen bei ihrem Herrn Gärten der Wonne zu.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="3">
            <Abschnitt id="1">
                <Gesaetz n="5">
                    <Vers n="035">
                        <Teilvers n="035" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="46">أَفَنَجۡعَلُ ٱلۡمُسۡلِمِينَ كَٱلۡمُجۡرِمِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="46">Sollen wir etwa die Gottergebenen den Übeltätern gleichsetzen?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="036">
                        <Teilvers n="036" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="47">مَا لَكُمۡ كَيۡفَ تَحۡكُمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="47">Was ist mit euch? Wie urteilt ihr?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="037">
                        <Teilvers n="037" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="48">أَمۡ لَكُمۡ كِتَٰبٌۭ فِيهِ تَدۡرُسُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="48">Oder habt ihr eine Schrift, in der ihr nachforschen könnt?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="038">
                        <Teilvers n="038" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="49">إِنَّ لَكُمۡ فِيهِ لَمَا تَخَيَّرُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="49">Ihr würdet darin doch nur finden, was ihr euch wünscht!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="039">
                        <Teilvers n="039" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="50">أَمۡ لَكُمۡ أَيۡمَٰنٌ عَلَيۡنَا بَٰلِغَةٌ إِلَىٰ يَوۡمِ ٱلۡقِيَٰمَةِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="50">Oder verfügt ihr uns gegenüber über Eide, die bis zum Tag der Auferstehung gelten?</Kolon>
                            <Kolon Einschub="false" lang="ar" n="51">إِنَّ لَكُمۡ لَمَا تَحۡكُمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="51">Was ihr urteilt, kommt euch selbst zu.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="040">
                        <Teilvers n="040" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="52">سَلۡهُمۡ أَيُّهُم بِذَٰلِكَ زَعِيمٌ</Kolon>
                            <Kolon Einschub="false" lang="de" n="52">Frag sie, wer von ihnen dafür bürgt!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="041">
                        <Teilvers n="041" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="53">أَمۡ لَهُمۡ شُرَكَآءُ</Kolon>
                            <Kolon Einschub="false" lang="de" n="53">Oder haben sie vielleicht Teilhaber?</Kolon>
                            <Kolon Einschub="false" lang="ar" n="54">فَلۡيَأۡتُوا۟ بِشُرَكَآئِهِمۡ إِن كَانُوا۟ صَٰدِقِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="54">Sie sollen doch ihre Teilhaber beibringen, wenn sie die Wahrheit sprechen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="042">
                        <Teilvers n="042" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="55">يَوۡمَ يُكۡشَفُ عَن سَاقٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="55">am Tag, an dem es ernst wird</Kolon>
                            <Kolon Einschub="false" lang="ar" n="56">وَيُدۡعَوۡنَ إِلَى ٱلسُّجُودِ فَلَا يَسۡتَطِيعُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="56">und sie aufgefordert werden, sich niederzuwerfen, es jedoch nicht vermögen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="043">
                        <Teilvers n="043" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="57">خَٰشِعَةً أَبۡصَٰرُهُمۡ تَرۡهَقُهُمۡ ذِلَّةٌۭ ۖ</Kolon>
                            <Kolon Einschub="false" lang="de" n="57">während ihre Blicke demütig sind und Schande sie bedeckt —</Kolon>
                            <Kolon Einschub="false" lang="ar" n="58">وَقَدۡ كَانُوا۟ يُدۡعَوۡنَ إِلَى ٱلسُّجُودِ وَهُمۡ سَٰلِمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="58">sie waren doch schon aufgefordert worden, sich niederzuwerfen, als sie noch gesund waren!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="6">
                    <Vers n="044">
                        <Teilvers n="044" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="59">فَذَرۡنِی وَمَن يُكَذِّبُ بِهَٰذَا ٱلۡحَدِيثِ ۖ</Kolon>
                            <Kolon Einschub="false" lang="de" n="59">Überlass den, der diese Kunde für Lüge erklärt, nur mir!</Kolon>
                            <Kolon Einschub="false" lang="ar" n="60">سَنَسۡتَدۡرِجُهُم مِّنۡ حَيۡثُ لَا يَعۡلَمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="60">Wir werden sie Schritt um Schritt dem näherbringen, wovon sie nicht wissen.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="045">
                        <Teilvers n="045" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="61">وَأُمۡلِی لَهُمۡ ۚ إِنَّ كَيۡدِی مَتِينٌ</Kolon>
                            <Kolon Einschub="false" lang="de" n="61">Ich gewähre ihnen Aufschub — meine List ist mit Bedacht angelegt.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="046">
                        <Teilvers n="046" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="62">أَمۡ تَسۡـَٔلُهُمۡ أَجۡرًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="62">Oder verlangst du etwa Lohn von ihnen,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="63">فَهُم مِّن مَّغۡرَمٍۢ مُّثۡقَلُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="63">so dass sie von einer Schuld belastet wären?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="047">
                        <Teilvers n="047" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="64">أَمۡ عِندَهُمُ ٱلۡغَيۡبُ فَهُمۡ يَكۡتُبُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="64">Oder verfügen sie über das Verborgene, so dass sie es niederzuschreiben vermöchten?</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="7">
                    <Vers n="048">
                        <Teilvers n="048" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="65">فَٱصۡبِرۡ لِحُكۡمِ رَبِّكَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="65">So harre geduldig auf das Urteil deines Herrn</Kolon>
                            <Kolon Einschub="false" lang="ar" n="66">وَلَا تَكُن كَصَاحِبِ ٱلۡحُوتِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="66">und sei nicht wie der mit dem Fisch,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="67">إِذۡ نَادَىٰ وَهُوَ مَكۡظُومٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="67">als er grollend rief.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="049">
                        <Teilvers n="049" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="68">لَّوۡلَآ أَن تَدَٰرَكَهُۥ نِعۡمَةٌۭ مِّن رَّبِّهِۦ</Kolon>
                            <Kolon Einschub="false" lang="de" n="68">Hätte ihn nicht die Gnade seines Herrn erreicht,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="69">لَنُبِذَ بِٱلۡعَرَآءِ وَهُوَ مَذۡمُومٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="69">so wäre er mit Tadel bedeckt an einer kahlen Stelle an Land geworfen worden.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="050">
                        <Teilvers n="050" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="70">فَٱجۡتَبَٰهُ رَبُّهُۥ</Kolon>
                            <Kolon Einschub="false" lang="de" n="70">Doch sein Herr erwählte ihn</Kolon>
                            <Kolon Einschub="false" lang="ar" n="71">فَجَعَلَهُۥ مِنَ ٱلصَّٰلِحِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="71">und machte ihn zu einem der Rechtschaffenen.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="051">
                        <Teilvers n="051" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="72">وَإِن يَكَادُ ٱلَّذِينَ كَفَرُوا۟ لَيُزۡلِقُونَكَ بِأَبۡصَٰرِهِمۡ</Kolon>
                            <Kolon Einschub="false" lang="de" n="72">Die Ungläubigen bringen dich mit ihren Blicken beinahe zu Fall,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="73">لَمَّا سَمِعُوا۟ ٱلذِّكۡرَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="73">wenn sie die Mahnung hören,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="74">وَيَقُولُونَ إِنَّهُۥ لَمَجۡنُونٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="74">und sie sprechen: »Er ist besessen!«</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="052">
                        <Teilvers n="052" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="75">وَمَا هُوَ إِلَّا ذِكۡرٌۭ لِّلۡعَٰلَمِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="75">Doch es ist eine Mahnung für die Weltbewohner.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
    </Sure>
</Quran>
