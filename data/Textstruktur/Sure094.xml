<?xml version="1.0" encoding="UTF-8"?>
<Quran xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Textstruktur.xsd">
    <Sure id="094" webtauglich="true" translator="Nicolai Sinai">
        <Hauptteil id="0">
            <Abschnitt id="0">
                <Gesaetz n="0">
                    <Vers n="000">
                        <Teilvers n="000" reim="2n/m">
                            <Kolon lang="ar" Einschub="false" n="0">بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ</Kolon>
                            <Kolon lang="de" Einschub="false" n="0">Im Namen Gottes, des barmherzigen Erbarmers!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="1">
                    <Vers n="001">
                        <Teilvers n="001" reim="3Krak">
                            <Kolon Einschub="false" lang="ar" n="1">أَلَمۡ نَشۡرَحۡ لَكَ صَدۡرَكَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1">Haben wir dir nicht die Brust geweitet,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="3Krak">
                            <Kolon Einschub="false" lang="ar" n="2">وَوَضَعۡنَا عَنكَ وِزۡرَكَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="2">und haben wir nicht die Bürde von dir genommen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="003">
                        <Teilvers n="003" reim="3Krak">
                            <Kolon Einschub="false" lang="ar" n="3">ٱلَّذِیٓ أَنقَضَ ظَهۡرَكَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3">die deinen Rücken niederdrückte,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="004">
                        <Teilvers n="004" reim="3Krak">
                            <Kolon Einschub="false" lang="ar" n="4">وَرَفَعۡنَا لَكَ ذِكۡرَكَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">und haben wir nicht dein Ansehen erhöht?</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="2">
                    <Vers n="005">
                        <Teilvers n="005" reim="-usrā">
                            <Kolon Einschub="false" lang="ar" n="5">فَإِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">Mit dem Schweren kommt Leichtes,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="006">
                        <Teilvers n="006" reim="-usrā">
                            <Kolon Einschub="false" lang="ar" n="6">إِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="6">mit dem Schweren kommt Leichtes!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="3">
                    <Vers n="007">
                        <Teilvers n="007" reim="3(K)K3b">
                            <Kolon Einschub="false" lang="ar" n="7">فَإِذَا فَرَغۡتَ فَٱنصَبۡ</Kolon>
                            <Kolon Einschub="false" lang="de" n="7">Wenn du nun frei bist, so mühe dich</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="008">
                        <Teilvers n="008" reim="3(K)K3b">
                            <Kolon Einschub="false" lang="ar" n="8">وَإِلَىٰ رَبِّكَ فَٱرۡغَبۡ</Kolon>
                            <Kolon Einschub="false" lang="de" n="8">und strebe deinem Herrn zu!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
    </Sure>
</Quran>