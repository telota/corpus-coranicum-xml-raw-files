<?xml version="1.0" encoding="UTF-8"?>
<Quran xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Textstruktur.xsd">
    <Sure id="076" translator="Angelika Neuwirth" webtauglich="true">
        <Hauptteil id="0">
            <Abschnitt id="0">
                <Gesaetz n="0">
                    <Vers n="000">
                        <Teilvers n="000" reim="2n/m">
                            <Kolon lang="ar" Einschub="false" n="0">بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ</Kolon>
                            <Kolon lang="de" Einschub="false" n="0">Im Namen Gottes, des barmherzigen Erbarmers!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="1">
            <Abschnitt id="1">
                <Gesaetz n="1">
                    <Vers n="001">
                        <Teilvers n="001" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="1">هَلۡ أَتَىٰ عَلَى ٱلۡإِنسَٰنِ حِينٌۭ مِّنَ ٱلدَّهۡرِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1">Mußte der Mensch nicht einmal eine ‎Zeit durchlaufen,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="2">لَمۡ يَكُن شَيۡـًۭٔا مَّذۡكُورًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="2">in der er nichts ‎Nennenswertes war?‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="3">إِنَّا خَلَقۡنَا ٱلۡإِنسَٰنَ مِن نُّطۡفَةٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3">Aus einem Tropfen erschufen wir den ‎Menschen,‎</Kolon>
                            <Kolon Einschub="false" lang="ar" n="4">أَمۡشَاجٍۢ نَّبۡتَلِيهِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">aus einem Gemisch, um ihn zu prüfen,‎</Kolon>
                            <Kolon Einschub="false" lang="ar" n="5">فَجَعَلۡنَٰهُ سَمِيعًۢا بَصِيرًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">dann verliehen wir ihm ‎Gehör und Gesicht.‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="003">
                        <Teilvers n="003" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="6">إِنَّا هَدَيۡنَٰهُ ٱلسَّبِيلَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="6">Wir leiteten ihn auf den Weg,‎</Kolon>
                            <Kolon Einschub="false" lang="ar" n="7">إِمَّا شَاكِرًۭا وَإِمَّا كَفُورًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="7">ob er nun dankbar sein würde oder ‎undankbar.‎</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="2">
                    <Vers n="004">
                        <Teilvers n="004" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="8">إِنَّآ أَعۡتَدۡنَا لِلۡكَٰفِرِينَ سَلَٰسِلَا۟</Kolon>
                            <Kolon Einschub="false" lang="de" n="8">Für die Leugner halten ‎wir Ketten,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="9">وَأَغۡلَٰلًۭا وَسَعِيرًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="9">Fesseln ‎und den Höllenbrand ‎bereit.‎</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="3">
                    <Vers n="005">
                        <Teilvers n="005" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="10">إِنَّ ٱلۡأَبۡرَارَ يَشۡرَبُونَ مِن كَأۡسٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="10">Die Frommen trinken aus einem Becher,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="11">كَانَ مِزَاجُهَا كَافُورًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="11">dessen Mischwasser  mit Kampfer versetzt ‎ist,‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="006">
                        <Teilvers n="006" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="12">عَيۡنًۭا يَشۡرَبُ بِهَا عِبَادُ ٱللَّهِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="12">aus einer Quelle, aus der die ‎Gottesdiener trinken</Kolon>
                            <Kolon Einschub="false" lang="ar" n="13">يُفَجِّرُونَهَا تَفۡجِيرًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="13">und die sie ‎selbst reichlich sprudeln ‎lassen.‎</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="2">
            <Abschnitt id="1">
                <Gesaetz n="4">
                    <Vers n="007">
                        <Teilvers n="007" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="14">يُوفُونَ بِٱلنَّذۡرِ وَيَخَافُونَ يَوۡمًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="14">Sie erfüllen das Gelübde und ‎fürchten einen Tag,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="15">كَانَ شَرُّهُۥ مُسۡتَطِيرًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="15">an dem ‎sich das Übel ausbreitet.‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="008">
                        <Teilvers n="008" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="16">وَيُطۡعِمُونَ ٱلطَّعَامَ عَلَىٰ حُبِّهِۦ</Kolon>
                            <Kolon Einschub="false" lang="de" n="16">Sie geben Speise — obgleich selber bedürftig —</Kolon>
                            <Kolon Einschub="false" lang="ar" n="17">مِسۡكِينًۭا وَيَتِيمًۭا وَأَسِيرًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="17">dem Armen, der Waise und dem ‎Gefangenen.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="009">
                        <Teilvers n="009" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="18">إِنَّمَا نُطۡعِمُكُمۡ لِوَجۡهِ ٱللَّهِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="18">»Nur um Gottes willen speisen wir euch.‎</Kolon>
                            <Kolon Einschub="false" lang="ar" n="19">لَا نُرِيدُ مِنكُمۡ جَزَآءًۭ وَلَا شُكُورًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="19">Wir wollen kein Entgelt und keinen ‎Dank.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="010">
                        <Teilvers n="010" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="20">إِنَّا نَخَافُ مِن رَّبِّنَا يَوۡمًا عَبُوسًۭا قَمۡطَرِيرًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="20">Wir fürchten von ‎unserem Herrn ‎einen düsteren, ‎bedrohlichen ‎Tag.«</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="5">
                    <Vers n="011">
                        <Teilvers n="011" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="21">فَوَقَىٰهُمُ ٱللَّهُ شَرَّ ذَٰلِكَ ٱلۡيَوۡمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="21">So bewahrte sie ihr Herr vor ‎dem Übel jenen Tages</Kolon>
                            <Kolon Einschub="false" lang="ar" n="22">وَلَقَّىٰهُمۡ نَضۡرَةًۭ وَسُرُورًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="22">und ließ ‎sie Frische und Freude ‎erfahren</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="012">
                        <Teilvers n="012" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="23">وَجَزَىٰهُم بِمَا صَبَرُوا۟</Kolon>
                            <Kolon Einschub="false" lang="de" n="23">und belohnte sie für das, was ‎sie erduldet hatten,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="24">جَنَّةًۭ وَحَرِيرًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="24">mit ‎einem Garten und mit ‎Seide.‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="013">
                        <Teilvers n="013" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="25">مُّتَّكِـِٔينَ فِيهَا عَلَى ٱلۡأَرَآئِكِ ۖ</Kolon>
                            <Kolon Einschub="false" lang="de" n="25">Dort liegen sie, an Ruhepolster gelehnt,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="26">لَا يَرَوۡنَ فِيهَا شَمۡسًۭا وَلَا زَمۡهَرِيرًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="26">sie leiden nicht Sonnenglut noch ‎sengende Hitze.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="014">
                        <Teilvers n="014" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="27">وَدَانِيَةً عَلَيۡهِمۡ ظِلَٰلُهَا</Kolon>
                            <Kolon Einschub="false" lang="de" n="27">Tief hängen die ‎Schatten auf sie ‎herab,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="28">وَذُلِّلَتۡ قُطُوفُهَا تَذۡلِيلًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="28">und ‎Früchte sind zum ‎Greifen nahe.‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="015">
                        <Teilvers n="015" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="29">وَيُطَافُ عَلَيۡهِم بِـَٔانِيَةٍۢ مِّن فِضَّةٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="29">Es kreisen unter ihnen ‎Gefäße aus Silber</Kolon>
                            <Kolon Einschub="false" lang="ar" n="30">وَأَكۡوَابٍۢ كَانَتۡ قَوَارِيرَا۠</Kolon>
                            <Kolon Einschub="false" lang="de" n="30">und Pokalbecher,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="016">
                        <Teilvers n="016" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="31">قَوَارِيرَا۟ مِن فِضَّةٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="31">Pokalbecher aus Silber,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="32">قَدَّرُوهَا تَقۡدِيرًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="32">die wohl bemessen sind,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="017">
                        <Teilvers n="017" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="33">وَيُسۡقَوۡنَ فِيهَا كَأۡسًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="33">zu trinken gibt man ihnen dort aus einem ‎Kelch,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="34">كَانَ مِزَاجُهَا زَنجَبِيلًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="34">dessen Trank Ingwer beigemischt ist,‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="018">
                        <Teilvers n="018" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="35">عَيۡنًۭا فِيهَا تُسَمَّىٰ سَلۡسَبِيلًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="35">aus einer Quelle, die Salsabīl genannt wird.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="6">
                    <Vers n="019">
                        <Teilvers n="019" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="36">وَيَطُوفُ عَلَيۡهِمۡ وِلۡدَٰنٌۭ مُّخَلَّدُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="36">Jünglinge, ewig lebende, umkreisen sie;‎</Kolon>
                            <Kolon Einschub="false" lang="ar" n="37">إِذَا رَأَيۡتَهُمۡ حَسِبۡتَهُمۡ لُؤۡلُؤًۭا مَّنثُورًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="37">wenn du sie siehst, hältst du sie für ausgestreute ‎Perlen.‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="020">
                        <Teilvers n="020" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="38">وَإِذَا رَأَيۡتَ ثَمَّ</Kolon>
                            <Kolon Einschub="false" lang="de" n="38">Und wenn du dich dort umblickst,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="39">رَأَيۡتَ نَعِيمًۭا وَمُلۡكًۭا كَبِيرًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="39">siehst du nur Glück und prächtige Herrschaft.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="021">
                        <Teilvers n="021" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="40">عَٰلِيَهُمۡ ثِيَابُ سُندُسٍ خُضۡرٌۭ وَإِسۡتَبۡرَقٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="40">Sie sind mit grünen Gewändern angetan aus Seide und Brokat</Kolon>
                            <Kolon Einschub="false" lang="ar" n="41">وَحُلُّوٓا۟ أَسَاوِرَ مِن فِضَّةٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="41">und mit Armringen aus Silber geschmückt.‎</Kolon>
                            <Kolon Einschub="false" lang="ar" n="42">وَسَقَىٰهُمۡ رَبُّهُمۡ شَرَابًۭا طَهُورًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="42">Ihr Herr reicht ihnen einen reichen Trank:‎</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="7">
                    <Vers n="022">
                        <Teilvers n="022" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="43">إِنَّ هَٰذَا كَانَ لَكُمۡ جَزَآءًۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="43">»Das habt ihr zum Lohn!</Kolon>
                            <Kolon Einschub="false" lang="ar" n="44">وَكَانَ سَعۡيُكُم مَّشۡكُورًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="44">Dank findet euer Mühen.«</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
        <Hauptteil id="3">
            <Abschnitt id="1">
                <Gesaetz n="8">
                    <Vers n="023">
                        <Teilvers n="023" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="45">إِنَّا نَحۡنُ نَزَّلۡنَا عَلَيۡكَ ٱلۡقُرۡءَانَ تَنزِيلًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="45">Wir sind es ja, die die Lesung immer wieder auf dich ‎herabsenden,‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="024">
                        <Teilvers n="024" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="46">فَٱصۡبِرۡ لِحُكۡمِ رَبِّكَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="46">so harre standhaft der Entscheidung deines Herrn,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="47">وَلَا تُطِعۡ مِنۡهُمۡ ءَاثِمًا أَوۡ كَفُورًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="47">und folge niemandem von ihnen, keinem Sünder ‎oder Undankbaren!‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="025">
                        <Teilvers n="025" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="48">وَٱذۡكُرِ ٱسۡمَ رَبِّكَ بُكۡرَةًۭ وَأَصِيلًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="48">Gedenke des Namens deines ‎Herrn am Morgen und am Abend</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="026">
                        <Teilvers n="026" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="49">وَمِنَ ٱلَّيۡلِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="49">und zu einem Teil der Nacht!‎</Kolon>
                            <Kolon Einschub="false" lang="ar" n="50">فَٱسۡجُدۡ لَهُۥ</Kolon>
                            <Kolon Einschub="false" lang="de" n="50">Wirf dich vor ihm nieder</Kolon>
                            <Kolon Einschub="false" lang="ar" n="51">وَسَبِّحۡهُ لَيۡلًۭا طَوِيلًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="51">und preise ihn die ganze Nacht lang!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="9">
                    <Vers n="027">
                        <Teilvers n="027" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="52">إِنَّ هَٰٓؤُلَآءِ يُحِبُّونَ ٱلۡعَاجلَةَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="52">Die dort lieben das Flüchtige</Kolon>
                            <Kolon Einschub="false" lang="ar" n="53">وَيَذَرُونَ وَرَآءَهُمۡ يَوۡمًۭا ثَقِيلًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="53">und lassen einen schweren Tag außer acht.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="028">
                        <Teilvers n="028" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="54">نَّحۡنُ خَلَقۡنَٰهُمۡ وَشَدَدۡنَآ أَسۡرَهُمۡ ۖ</Kolon>
                            <Kolon Einschub="false" lang="de" n="54">Wir erschufen sie und machten sie stark;</Kolon>
                            <Kolon Einschub="false" lang="ar" n="55">وَإِذَا شِئۡنَا بَدَّلۡنَآ أَمۡثَٰلَهُمۡ تَبۡدِيلًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="55">wenn wir wollen, tauschen wir sie gegen andere ‎aus.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="10">
                    <Vers n="029">
                        <Teilvers n="029" reim="2rā/ 2lā">
                            <Kolon Einschub="false" lang="ar" n="56">إِنَّ هَٰذِهِۦ تَذۡكِرَةٌۭ ۖ</Kolon>
                            <Kolon Einschub="false" lang="de" n="56">Das ist eine Mahnung;</Kolon>
                            <Kolon Einschub="false" lang="ar" n="57">فَمَن شَآءَ ٱتَّخَذَ إِلَىٰ رَبِّهِۦ سَبِيلًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="57">wer will, schlägt den Weg zu seinem Herrn ein.‎</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="030">
                        <Teilvers n="030" reim="2mā">
                            <Kolon Einschub="true" lang="ar" n="58">وَمَا تَشَآءُونَ</Kolon>
                            <Kolon Einschub="true" lang="de" n="58">Aber ihr werdet es nicht wollen —‎</Kolon>
                            <Kolon Einschub="true" lang="ar" n="59">إِلَّآ أَن يَشَآءَ ٱللَّهُۚ</Kolon>
                            <Kolon Einschub="true" lang="de" n="59">außer wenn Gott es will.</Kolon>
                            <Kolon Einschub="true" lang="ar" n="60">إِنَّ ٱللَّهَ كَانَ عَلِيمًا حَكِيمًۭا</Kolon>
                            <Kolon Einschub="true" lang="de" n="60">‎Gott ist wissend und ‎weise.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="031">
                        <Teilvers n="031" reim="2mā">
                            <Kolon Einschub="false" lang="ar" n="61">يُدۡخِلُ مَن يَشَآءُ فِی رَحۡمَتِهِۦ ۚ</Kolon>
                            <Kolon Einschub="false" lang="de" n="61">Er nimmt, wen er will, in seine Barmherzigkeit auf;‎</Kolon>
                            <Kolon Einschub="false" lang="ar" n="62">وَٱلظَّٰلِمِينَ أَعَدَّ لَهُمۡ عَذَابًا أَلِيمًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="62">doch für die Frevler hält er schmerzliche Strafe ‎bereit.‎</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
