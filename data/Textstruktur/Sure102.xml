<?xml version="1.0" encoding="UTF-8"?>
<Quran xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Textstruktur.xsd">
    <Sure id="102" webtauglich="true" translator="Nicolai Sinai">
        <Hauptteil id="0">
            <Abschnitt id="0">
                <Gesaetz n="0">
                    <Vers n="000">
                        <Teilvers n="000" reim="2n/m">
                            <Kolon lang="ar" Einschub="false" n="0">بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ</Kolon>
                            <Kolon lang="de" Einschub="false" n="0">Im Namen Gottes, des barmherzigen Erbarmers!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="1">
                    <Vers n="001">
                        <Teilvers n="001" reim="āK3r">
                            <Kolon Einschub="false" lang="ar" n="1">أَلۡهَىٰكُمُ ٱلتَّكَاثُرُ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1">Die Habgier lenkt euch ab,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="āK3r">
                            <Kolon Einschub="false" lang="ar" n="2">حَتَّىٰ زُرۡتُمُ ٱلۡمَقَابِرَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="2">bis ihr ins Grab kommt.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="2">
                    <Vers n="003">
                        <Teilvers n="003" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="3">كَلَّا سَوۡفَ تَعۡلَمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3">Nein! Ihr werdet zu wissen bekommen!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="004">
                        <Teilvers n="004" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="4">ثُمَّ كَلَّا سَوۡفَ تَعۡلَمُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">Nochmals: Nein! Ihr werdet zu wissen bekommen!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="005">
                        <Teilvers n="005" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="5">كَلَّا لَوۡ تَعۡلَمُونَ عِلۡمَ ٱلۡيَقِينِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">Nein! Wenn ihr nur sicher wüsstet!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="3">
                    <Vers n="006">
                        <Teilvers n="006" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="6">لَتَرَوُنَّ ٱلۡجَحِيمَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="6">Ihr bekommt bestimmt das Höllenfeuer zu sehen!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="007">
                        <Teilvers n="007" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="7">ثُمَّ لَتَرَوُنَّهَا عَيۡنَ ٱلۡيَقِينِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="7">Nochmals: Ihr bekommt es bestimmt mit sicherem Blicke zu sehen!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="008">
                        <Teilvers n="008" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="8">ثُمَّ لَتُسۡـَٔلُنَّ يَوۡمَئِذٍ عَنِ ٱلنَّعِيمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="8">Nochmals: An jenem Tage werdet ihr bestimmt über das Wohlleben befragt!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
    </Sure>
</Quran>
