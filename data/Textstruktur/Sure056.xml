        <Hauptteil id="1">
            <Abschnitt id="1">
                <Gesaetz n="1">
                    <Vers n="001">
                        <Teilvers n="001" reim="āKiKah">
                            <Kolon Einschub="false" lang="ar" n="1">إِذَا وَقَعَتِ ٱلۡوَاقِعَةُ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1"> Wenn die Hereinbrechende hereinbricht —</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="āKiKah">
                            <Kolon Einschub="false" lang="ar" n="2">لَيۡسَ لِوَقۡعَتِهَا كَاذِبَةٌ</Kolon>
                            <Kolon Einschub="false" lang="de" n="2"> ihr Hereinbrechen kann niemand leugnen —</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="003">
                        <Teilvers n="003" reim="āKiKah">
                            <Kolon Einschub="false" lang="ar" n="3">خَافِضَةٌۭ رَّافِعَةٌ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3"> erniedrigend und erhöhend!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="2">
                    <Vers n="004">
                        <Teilvers n="004" reim="3GGā">
                            <Kolon Einschub="false" lang="ar" n="4">إِذَا رُجَّتِ ٱلۡأَرۡضُ رَجًّۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="4"> Wenn die Erde heftig erschüttert wird</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="005">
                        <Teilvers n="005" reim="3GGā">
                            <Kolon Einschub="false" lang="ar" n="5">وَبُسَّتِ ٱلۡجِبَالُ بَسًّۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="5"> und die Berge zermalmt werden</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="006">
                        <Teilvers n="006" reim="3GGā">
                            <Kolon Einschub="false" lang="ar" n="6">فَكَانَتۡ هَبَآءًۭ مُّنۢبَثًّۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="6"> und zu zerstreutem Staub werden</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="007">
                        <Teilvers n="007" reim="āṯah">
                            <Kolon Einschub="false" lang="ar" n="7">وَكُنتُمۡ أَزۡوَٰجًۭا ثَلَٰثَةًۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="7"> und ihr drei Gruppen seid:</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="008">
                        <Teilvers n="008" reim="3(K)K3Kah" reimkommentar="mit Sonoren">
                            <Kolon Einschub="false" lang="ar" n="8">فَأَصۡحَٰبُ ٱلۡمَيۡمَنَةِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="8"> (a) Die Leute der Rechten —</Kolon>
                        </Teilvers>
                        <Teilvers n="009" reim="3(K)K3Kah" reimkommentar="mit Sonoren">
                            <Kolon Einschub="false" lang="ar" n="9">مَآ أَصۡحَٰبُ ٱلۡمَيۡمَنَةِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="9"> (b) was sind die Leute der Rechten? —,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="009">
                        <Teilvers n="010" reim="3(K)K3Kah" reimkommentar="mit Sonoren">
                            <Kolon Einschub="false" lang="ar" n="10">وَأَصۡحَٰبُ ٱلۡمَشۡـَٔمَةِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="10"> (a) die Leute der Linken —</Kolon>
                        </Teilvers>
                        <Teilvers n="011" reim="3(K)K3Kah" reimkommentar="mit Sonoren">
                            <Kolon Einschub="false" lang="ar" n="11">مَآ أَصۡحَٰبُ ٱلۡمَشۡـَٔمَةِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="11"> (b) was sind die Leute der Linken? —,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="010">
                        <Teilvers n="012" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="12">وَٱلسَّٰبِقُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="12"> (a) und die Vorauseilenden.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="3">
                    <Vers n="010">
                        <Teilvers n="013" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="13">ٱلسَّٰبِقُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="13"> (b) Die Vorauseilenden,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="011">
                        <Teilvers n="014" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="14">أُو۟لَٰٓئِكَ ٱلۡمُقَرَّبُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="14"> das sind die Gott Nahestehenden,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="012">
                        <Teilvers n="015" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="15">فِی جَنَّٰتِ ٱلنَّعِيمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="15"> in Gärten der Wonne —</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="013">
                        <Teilvers n="016" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="16">ثُلَّةٌۭ مِّنَ ٱلۡأَوَّلِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="16"> eine Schar von den Altvorderen</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="014">
                        <Teilvers n="017" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="17">وَقَلِيلٌۭ مِّنَ ٱلۡٴَاخِرِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="17"> und wenige von den Späteren —,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="015">
                        <Teilvers n="018" reim="ūnah">
                            <Kolon Einschub="false" lang="ar" n="18">عَلَىٰ سُرُرٍۢ مَّوۡضُونَةٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="18"> auf durchwirkten Betten,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="016">
                        <Teilvers n="019" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="19">مُّتَّكِـِٔينَ عَلَيۡهَا مُتَقَٰبِلِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="19"> auf denen sie einander gegenüber ruhen;</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="017">
                        <Teilvers n="020" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="20">يَطُوفُ عَلَيۡهِمۡ وِلۡدَٰنٌۭ مُّخَلَّدُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="20"> ewig junge Knaben machen unter ihnen die Runde</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="018">
                        <Teilvers n="021" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="21">بِأَكۡوَابٍۢ وَأَبَارِيقَ وَكَأۡسٍۢ مِّن مَّعِينٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="21"> mit Bechern und Kannen und einem Kelch voll Quellwasser,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="019">
                        <Teilvers n="022" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="22">لَّا يُصَدَّعُونَ عَنۡهَا وَلَا يُنزِفُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="22"> von dem sie weder Kopfweh bekommen noch betrunken werden.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="020">
                        <Teilvers n="023" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="23">وَفَٰكِهَةٍۢ مِّمَّا يَتَخَيَّرُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="23"> An Früchten haben sie, was sie begehren,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="021">
                        <Teilvers n="024" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="24">وَلَحۡمِ طَيۡرٍۢ مِّمَّا يَشۡتَهُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="24"> und an Geflügelfleisch, wonach ihnen gelüstet,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="022">
                        <Teilvers n="025" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="25">وَحُورٌ عِينٌۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="25"> und Gefährtinnen mit großen schwarzen Augen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="023">
                        <Teilvers n="026" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="26">كَأَمۡثَٰلِ ٱللُّؤۡلُوِٕ ٱلۡمَكۡنُونِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="26"> verborgenen Perlen gleich,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="024">
                        <Teilvers n="027" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="27">جَزَآءًۢ بِمَا كَانُوا۟ يَعۡمَلُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="27"> als Entgelt für das, was sie getan haben.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="025">
                        <Teilvers n="028" reim="īmā / āmā">
                            <Kolon Einschub="false" lang="ar" n="28">لَا يَسۡمَعُونَ فِيهَا لَغۡوًۭا وَلَا تَأۡثِيمًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="28"> Sie hören dort weder Geschwätz noch Versündigung,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="026">
                        <Teilvers n="029" reim="īmā / āmā">
                            <Kolon Einschub="false" lang="ar" n="29">إِلَّا قِيلًۭا سَلَٰمًۭا سَلَٰمًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="29"> sondern nur, wie man „Friede, Friede!“ sagt.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="4">
                    <Vers n="027">
                        <Teilvers n="030" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="30">وَأَصۡحَٰبُ ٱلۡيَمِينِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="30"> (a) Und die Leute der Rechten —</Kolon>
