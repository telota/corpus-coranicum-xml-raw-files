                        <Teilvers n="031" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="31">مَآ أَصۡحَٰبُ ٱلۡيَمِينِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="31"> (b) was sind die Leute der Rechten?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="028">
                        <Teilvers n="032" reim="aKKūd/b">
                            <Kolon Einschub="false" lang="ar" n="32">فِی سِدۡرٍۢ مَّخۡضُودٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="32"> Sie befinden sich unter dornlosen Zizyphusbäumen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="029">
                        <Teilvers n="033" reim="aKKūd/b">
                            <Kolon Einschub="false" lang="ar" n="33">وَطَلۡحٍۢ مَّنضُودٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="33"> inmitten von dichten Akazien,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="030">
                        <Teilvers n="034" reim="aKKūd/b">
                            <Kolon Einschub="false" lang="ar" n="34">وَظِلٍّ مَّمۡدُودٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="34"> weit reichenden Schatten,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="031">
                        <Teilvers n="035" reim="aKKūd/b">
                            <Kolon Einschub="false" lang="ar" n="35">وَمَآءٍۢ مَّسۡكُوبٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="35"> sich ergießendem Wasser</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="032">
                        <Teilvers n="036" reim="2Kah">
                            <Kolon Einschub="false" lang="ar" n="36">وَفَٰكِهَةٍۢ كَثِيرَةٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="36"> reichen Früchten,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="033">
                        <Teilvers n="037" reim="2Kah">
                            <Kolon Einschub="false" lang="ar" n="37">لَّا مَقۡطُوعَةٍۢ وَلَا مَمۡنُوعَةٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="37"> zu denen sie ununterbrochen und ungehindert Zugang haben,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="034">
                        <Teilvers n="038" reim="2Kah">
                            <Kolon Einschub="false" lang="ar" n="38">وَفُرُشٍۢ مَّرۡفُوعَةٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="38"> und erhöhten Betten.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="035">
                        <Teilvers n="039" reim="āKā">
                            <Kolon Einschub="false" lang="ar" n="39">إِنَّآ أَنشَأۡنَٰهُنَّ إِنشَآءًۭ</Kolon>
                            <Kolon Einschub="false" lang="de" n="39"> Wir haben sie [die Paradiesjungfrauen] entstehen lassen</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="036">
                        <Teilvers n="040" reim="āKā">
                            <Kolon Einschub="false" lang="ar" n="40">فَجَعَلۡنَٰهُنَّ أَبۡكَارًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="40"> und zu Jungfrauen gemacht,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="037">
                        <Teilvers n="041" reim="āKā">
                            <Kolon Einschub="false" lang="ar" n="41">عُرُبًا أَتۡرَابًۭا</Kolon>
                            <Kolon Einschub="false" lang="de" n="41"> liebevoll zugewandten und gleichaltrigen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="038">
                        <Teilvers n="042" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="42">لِّأَصۡحَٰبِ ٱلۡيَمِينِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="42"> für die Leute der Rechten —</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="039">
                        <Teilvers n="043" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="43">ثُلَّةٌۭ مِّنَ ٱلۡأَوَّلِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="43"> eine Schar von den Altvorderen</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="040">
                        <Teilvers n="044" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="44">وَثُلَّةٌۭ مِّنَ ٱلۡٴَاخِرِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="44"> und eine Schar von den Späteren.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="5">
                    <Vers n="041">
                        <Teilvers n="045" reim="3(K)Kāl">
                            <Kolon Einschub="false" lang="ar" n="45">وَأَصۡحَٰبُ ٱلشِّمَالِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="45"> (a) Und die Leute der Linken —</Kolon>
                        </Teilvers>
                        <Teilvers n="046" reim="3(K)Kāl">
                            <Kolon Einschub="false" lang="ar" n="46">مَآ أَصۡحَٰبُ ٱلشِّمَالِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="46"> (b) was sind die Leute der Linken?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="042">
                        <Teilvers n="047" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="47">فِی سَمُومٍۢ وَحَمِيمٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="47"> Sie befinden sich in sengender Glut und kochendem Wasser</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="043">
                        <Teilvers n="048" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="48">وَظِلٍّ مِّن يَحۡمُومٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="48"> und einem Schatten von schwarzem Rauch,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="044">
                        <Teilvers n="049" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="49">لَّا بَارِدٍۢ وَلَا كَرِيمٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="49"> der weder kühlt noch wohltuend ist.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="045">
                        <Teilvers n="050" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="50">إِنَّهُمۡ كَانُوا۟ قَبۡلَ ذَٰلِكَ مُتۡرَفِينَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="50"> Früher lebten sie im Überfluss</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="046">
                        <Teilvers n="051" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="51">وَكَانُوا۟ يُصِرُّونَ عَلَى ٱلۡحِنثِ ٱلۡعَظِيمِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="51"> und verharrten in gewaltiger Sünde</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="047">
                        <Teilvers n="052" reim="2n/m">
                            <Kolon Einschub="false" lang="ar" n="52">وَكَانُوا۟ يَقُولُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="52"> und pflegten zu sagen:</Kolon>
                            <Kolon Einschub="false" lang="ar" n="53">أَئِذَا مِتۡنَا وَكُنَّا تُرَابًۭا وَعِظَٰمًا</Kolon>
                            <Kolon Einschub="false" lang="de" n="53">„Wenn wir gestorben und zu Staub und Knochen geworden sind,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="54">أَءِنَّا لَمَبۡعُوثُونَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="54">sollen wir dann etwa erweckt werden?</Kolon>
