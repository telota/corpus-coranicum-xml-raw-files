                    <Vers n="004">
                        <Teilvers n="004" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="4">عَلَّمَهُ ٱلۡبَيَانَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">und ihn klare Rede gelehrt.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="005">
                        <Teilvers n="005" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="5">ٱلشَّمۡسُ وَٱلۡقَمَرُ بِحُسۡبَانٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">Sonne und Mond gehen nach Berechnung.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="006">
                        <Teilvers n="006" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="6">وَٱلنَّجۡمُ وَٱلشَّجَرُ يَسۡجُدَانِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="6">Sterne und Bäume werfen sich nieder.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="2">
                    <Vers n="007">
                        <Teilvers n="007" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="7">وَٱلسَّمَآءَ رَفَعَهَا وَوَضَعَ ٱلۡمِيزَانَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="7">Den Himmel hob er empor und setzte die Waage fest,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="008">
                        <Teilvers n="008" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="8">أَلَّا تَطۡغَوۡا۟ فِی ٱلۡمِيزَانِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="8">auf dass ihr beim Wiegen nicht aufsässig seid;</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="009">
                        <Teilvers n="009" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="9">وَأَقِيمُوا۟ ٱلۡوَزۡنَ بِٱلۡقِسۡطِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="9">Stellt die Gewichte auf, wie es recht ist,</Kolon>
                            <Kolon Einschub="false" lang="ar" n="10">وَلَا تُخۡسِرُوا۟ ٱلۡمِيزَانَ</Kolon>
                            <Kolon Einschub="false" lang="de" n="10">und zieht nichts von der Waage ab!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="010">
                        <Teilvers n="010" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="11">وَٱلۡأَرۡضَ وَضَعَهَا لِلۡأَنَامِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="11">Die Erde setzte er für die Menschen hin;</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="011">
                        <Teilvers n="011" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="12">فِيهَا فَٰكِهَةٌۭ وَٱلنَّخۡلُ ذَاتُ ٱلۡأَكۡمَامِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="12">auf ihr gibt es Früchte und Palmen mit Fruchthüllen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="012">
                        <Teilvers n="012" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="13">وَٱلۡحَبُّ ذُو ٱلۡعَصۡفِ وَٱلرَّيۡحَانُ</Kolon>
                            <Kolon Einschub="false" lang="de" n="13">Korn auf Halmen und Duftkräuter.</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="013">
                        <Teilvers n="013" reim="ān/m" reimkommentar="mit gelegehntlichen Varianten">
                            <Kolon Einschub="false" lang="ar" n="14">فَبِأَىِّ ءَالَآءِ رَبِّكُمَا تُكَذِّبَانِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="14">Welchen der Gnadenerweise eures Herrn wollt ihr denn leugnen?</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
