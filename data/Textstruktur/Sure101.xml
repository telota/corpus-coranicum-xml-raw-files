<?xml version="1.0" encoding="UTF-8"?>
<Quran xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Textstruktur.xsd">
    <Sure id="101" webtauglich="true" translator="Nicolai Sinai">
        <Hauptteil id="0">
            <Abschnitt id="0">
                <Gesaetz n="0">
                    <Vers n="000">
                        <Teilvers n="000" reim="2n/m">
                            <Kolon lang="ar" Einschub="false" n="0">بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ</Kolon>
                            <Kolon lang="de" Einschub="false" n="0">Im Namen Gottes, des barmherzigen Erbarmers!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="1">
                    <Vers n="001">
                        <Teilvers n="001" reim="āKiʿah">
                            <Kolon Einschub="false" lang="ar" n="1">ٱلۡقَارِعَةُ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1">Die Erschütternde!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="āKiʿah">
                            <Kolon Einschub="false" lang="ar" n="2">مَا ٱلۡقَارِعَةُ</Kolon>
                            <Kolon Einschub="false" lang="de" n="2">Was ist die Erschütternde?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="003">
                        <Teilvers n="003" reim="āKiʿah">
                            <Kolon Einschub="false" lang="ar" n="3">وَمَآ أَدۡرَىٰكَ مَا ٱلۡقَارِعَةُ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3">Was lässt dich wissen, was die Erschütternde ist?</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="2">
                    <Vers n="004">
                        <Teilvers n="004" reim="3K(K)2K" reimkommentar="mit Spiranten">
                            <Kolon Einschub="false" lang="ar" n="4">يَوۡمَ يَكُونُ ٱلنَّاسُ كَٱلۡفَرَاشِ ٱلۡمَبۡثُوثِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">Am Tag, an dem die Menschen wie auffliegende Motten sein werden</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="005">
                        <Teilvers n="005" reim="3K(K)2K" reimkommentar="mit Spiranten">
                            <Kolon Einschub="false" lang="ar" n="5">وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ ٱلۡمَنفُوشِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">und die Berge wie zerzauste Wolle,</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="3">
                    <Vers n="006">
                        <Teilvers n="006" reim="īnuh">
                            <Kolon Einschub="false" lang="ar" n="6">فَأَمَّا مَن ثَقُلَتۡ مَوَٰزِينُهُۥ</Kolon>
                            <Kolon Einschub="false" lang="de" n="6">wessen Waagschalen dann schwer sind,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="007">
                        <Teilvers n="007" reim="āKiyah">
                            <Kolon Einschub="false" lang="ar" n="7">فَهُوَ فِی عِيشَةٍۢ رَّاضِيَةٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="7">der führt ein zufriedenes Leben;</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="008">
                        <Teilvers n="008" reim="īnuh">
                            <Kolon Einschub="false" lang="ar" n="8">وَأَمَّا مَنۡ خَفَّتۡ مَوَٰزِينُهُۥ</Kolon>
                            <Kolon Einschub="false" lang="de" n="8">wessen Waagschalen aber leicht sind,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="009">
                        <Teilvers n="009" reim="āKiyah">
                            <Kolon Einschub="false" lang="ar" n="9">فَأُمُّهُۥ هَاوِية</Kolon>
                            <Kolon Einschub="false" lang="de" n="9">dessen Mutter ist eine Schlucht.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
                <Gesaetz n="4">
                    <Vers n="010">
                        <Teilvers n="010" reim="āKiyah">
                            <Kolon Einschub="false" lang="ar" n="10">وَمَآ أَدۡرَىٰكَ مَا هِيَهۡ</Kolon>
                            <Kolon Einschub="false" lang="de" n="10">Was lässt dich wissen, was sie ist?</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="011">
                        <Teilvers n="011" reim="āKiyah">
                            <Kolon Einschub="false" lang="ar" n="11">نَارٌ حَامِيَةٌ</Kolon>
                            <Kolon Einschub="false" lang="de" n="11">Heißes Feuer!</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
    </Sure>
</Quran>
