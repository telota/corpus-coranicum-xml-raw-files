<?xml version="1.0" encoding="UTF-8"?>
<Quran xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Textstruktur.xsd">
    <Sure id="106" webtauglich="true" translator="Nicolai Sinai">
        <Hauptteil id="0">
            <Abschnitt id="0">
                <Gesaetz n="0">
                    <Vers n="000">
                        <Teilvers n="000" reim="2n/m">
                            <Kolon lang="ar" Einschub="false" n="0">بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ</Kolon>
                            <Kolon lang="de" Einschub="false" n="0">Im Namen Gottes, des barmherzigen Erbarmers!</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="001">
                        <Teilvers n="001" reim="3KK">
                            <Kolon Einschub="false" lang="ar" n="1">لِّإِيلَٰفِ قُرَيۡشٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="1">Für die Gewöhnung der Quraiš,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="002">
                        <Teilvers n="002" reim="3KK">
                            <Kolon Einschub="false" lang="ar" n="2">إِۦلَٰفِهِمۡ رِحۡلَةَ ٱلشِّتَآءِ وَٱلصَّيۡفِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="2">ihre Gewöhnung an die Winter— und Sommerreise</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="003">
                        <Teilvers n="003" reim="3KK">
                            <Kolon Einschub="false" lang="ar" n="3">فَلۡيَعۡبُدُوا۟ رَبَّ هَٰذَا ٱلۡبَيۡتِ</Kolon>
                            <Kolon Einschub="false" lang="de" n="3">sollen sie dem Herrn dieses Hauses dienen,</Kolon>
                        </Teilvers>
                    </Vers>
                    <Vers n="004">
                        <Teilvers n="004" reim="3KK">
                            <Kolon Einschub="false" lang="ar" n="4">ٱلَّذِیٓ أَطۡعَمَهُم مِّن جُوعٍۢ</Kolon>
                            <Kolon Einschub="false" lang="de" n="4">der sie genährt hat gegen Hunger</Kolon>
                            <Kolon Einschub="false" lang="ar" n="5">وَءَامَنَهُم مِّنۡ خَوۡفٍ</Kolon>
                            <Kolon Einschub="false" lang="de" n="5">und gesichert hat gegen Furcht.</Kolon>
                        </Teilvers>
                    </Vers>
                </Gesaetz>
            </Abschnitt>
        </Hauptteil>
    </Sure>
</Quran>
